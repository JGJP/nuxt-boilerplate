{
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "moduleResolution": "Node",
      "lib": [
        "ESNext",
        "ESNext.AsyncIterable",
        "DOM"
      ],
      "experimentalDecorators": true,
      "esModuleInterop": true,
      "allowJs": true,
      "sourceMap": true,
      "strict": true,
      "noEmit": true,
      "baseUrl": ".",
      "paths": {
        "~/*": ["./*"],
      },
      "types": [
        "@types/node",
        "@nuxt/types",
        "@nuxtjs/axios",
        "@nuxt/image",
      ],
      "resolveJsonModule": true,
      "noErrorTruncation": true
    },
    "exclude": ["node_modules", ".nuxt", "dist"]
}
  