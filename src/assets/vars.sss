// colors
// postcss-color-function
$blue-hue:				206
$blue:				 	hsl($blue-hue, 92%, 46%)
$green-hue:				145
$green:					hsl($green-hue, 63%, 42%)
$orange-hue:			36
$orange:			 	hsl($orange-hue, 93%, 55%)
$orange-transparent:	hsla($orange-hue, 98%, 66%, 0.05)
$purple-hue:			331
$purple:				hsl($purple-hue, 100%, 73%)
$red-hue:				6
$red:					hsl($red-hue, 78%, 57%)
$turqoise-hue:			170
$turquoise:				hsl($turqoise-hue, 99%, 31%)
$yellow-hue:			57
$yellow:				hsl($yellow-hue, 100%, 50%)

$hue:					$blue-hue
$black:              	hsl($hue, 10%, 10%)
$white:              	hsl($hue, 10%, 100%)
$opacity1:				0.85
$opacity2:				0.65

// color assignments
$color:					$black
$highlight-color:		$yellow
$shadow: 				color( $black a(24%) )
$shadow-2: 				color( $black a(16%) )

$bg:                 	$white
$bg--05:              	color( $bg shade(3.75%) )
$bg--1:              	color( $bg shade(15%) )
$bg--2:              	color( $bg shade(30%) )
$bg--3:              	color( $bg shade(60%) )

$fg:                 	$blue
$fg--1:              	color( $fg shade(15%) )
$fg--2:              	color( $fg shade(30%) )
$fg-1:              	color( $fg tint(15%) )
$fg-2:              	color( $fg tint(30%) )
$fg-3:              	color( $fg tint(60%) )

$fg2:					$orange
$fg2-1:              	color( $fg2 tint(15%) )
$fg-accent:				$orange
$fg-accent-transparent:	$orange-transparent
$body-bg:				$fg--2
$main-bg:				lighten( $bg--1, 3% )
$border-color:			$bg--3
$border-color-light:	$bg--2

// nav
$panel-padding:			$unit2
$header-padding:		0rem
$logo-bar-height:		$unit5
$nav-height:			$unit5
$header-height:			calc( $unit5 + $header-padding * 2 )
$header-height-mobile:	$logo-bar-height // logo-bar (logo and cta stacked)
$nav-bg:             	$fg
$nav-color:				$bg
$nav-fg:				$bg
$nav-bg--1:            	color( $nav-bg shade(15%) )
$nav-bg--2:            	color( $nav-bg shade(30%) )
$nav-bg-rim:         	color( $nav-bg tint(30%) )
$nav-bg-transparent: 	color( $nav-bg a(100%) )
// double nav
$double-nav-bg:	        $bg
$double-nav-color:		$color
$double-nav-fg:			$bg
$double-nav-bg-transparent: color( $double-nav-bg a(75%) )
$double-nav-bg-rim:    	color( $double-nav-bg tint(30%) )
// controls
$controls-height:		$unit4
$controls-bg:			$nav-bg--1
$controls-bg-1:			$nav-bg
$controls-bg-2:			$fg-2

// footer and socket
$footer-bg:				$fg
$socket-bg:				color( $footer-bg shade(15%) )
$socket-height:			0rem

// fonts
$font-japanese:	       	'Hiragino Kaku Gothic ProN', 'ヒラギノ角ゴ ProN W3', Meiryo, メイリオ, Osaka, 'MS PGothic', arial, helvetica, sans-serif
$font-serif:         	游ゴシック体, 'Yu Gothic', YuGothic, 'ヒラギノ角ゴシック Pro', 'Hiragino Kaku Gothic Pro', メイリオ, Meiryo, Osaka, 'ＭＳ Ｐゴシック', 'MS PGothic', sans-serif
$font-minchotai:     	"游明朝", YuMincho, "ヒラギノ明朝 ProN W3", "Hiragino Mincho ProN", "HG明朝E", "ＭＳ Ｐ明朝", "ＭＳ 明朝", serif
$font-english:       	'Roboto', sans-serif
$font-ui:				sans-serif
$font:					$font-english
$font-header:			$font-english
$font-size-small:		0.9rem
$font-size-smaller:		0.7rem
$font-weight-thin:   	300
$font-weight-normal: 	400
$font-weight-bold:   	500
$font-weight:			$font-weight-normal
$font-weight-ui:		$font-weight-normal
$font-weight-header: 	$font-weight-bold

// svg
$display-bg:			$bg--1
$display-line:			$bg--2
$display-color:			$bg--3
$stroke-width-line:		2
$stroke-width:			2
$blank-fill:			color( $bg a(60%) )
$missed-stroke:			color( $color tint(70%) )
$blank-stroke: 			$missed-stroke
$blank-stroke-today: 	$orange
$done-fill: 			$fg
$done-stroke: 			$fg
$credit-fill: 			$fg-3
$credit-stroke:			$fg-3
$highlight-fill:		hsla(60, 100%, 80%, 0.4)
$highlight-stroke:		hsla(60, 80%, 40%, 0.4)
$highlight-fill-done:	hsl($hue, 80%, 70%)
$highlight-stroke-done:	hsl($hue, 80%, 60%)
$group-handle-fill:		hsl($hue, 20%, 60%)
$group-handle-stroke:	hsl($hue, 80%, 40%)

// z-indexes
$z-indexes: "section"
$z-index-header: 4
$z-index-nav: 3
$z-index-page-2: 2
$z-index-page-1: 1

// transitions (similar to body-bg below)
$trans-time:         	0.3s
$ease-out:           	cubic-bezier(0, 0, 0, 1)
$scale-down:         	0.96
$scale-up:           	1.05
$hover-opacity:      	0.6

// mixins
@define-mixin nav-bg
	background: $nav-bg

@define-mixin body-bg
	@mixin gradient-bg $nav-bg, $nav-bg-dark
		$trans-time: 0.3s
		$ease-out: cubic-bezier(0, 0, 0, 1)
		$scale-down: 0.96
		$scale-up: 1.05
		$hover-opacity: 0.6

@define-mixin transition $property, $time: $trans-time, $ease: ease
	transition: $property $time $ease
	will-change: $property

@define-mixin space-items-wrap $spacing: $unit1
	margin-top: calc ( $spacing )
	> *
		margin-top: $spacing
		&:not(:last-child)
			margin-right: $spacing

@define-mixin space-items-wrap-horz $spacing: $unit1
	margin-left: calc ( $spacing * -1 )
	> *
		margin-left: $spacing
		&:not(:last-child)
			margin-right: $spacing

@define-mixin light-text
	color: inherit
	opacity: $opacity1

@define-mixin gradient-bg-vert $from: $main-color-light, $to: $main-color
	background: linear-gradient($from,$to)

@define-mixin bg1
	background: $bg--05

// box-shadows

@define-mixin box-shadow
	box-shadow: 0 3px 10px $shadow, 0 3px 10px $shadow-2
.box-shadow
	@mixin box-shadow

@define-mixin box-shadow-small
	box-shadow: 1px 3px 4px $shadow, 1px 3px 4px $shadow
.box-shadow-small
	@mixin box-shadow-small

@define-mixin box-shadow-big
	box-shadow: 0 20px 40px $shadow, 0 15px 12px $shadow-2
.box-shadow-big
	@mixin box-shadow-big

@define-mixin box-shadow-down
	box-shadow: 6px 6px 6px $shadow, -6px 6px 6px $shadow-2
.box-shadow-down
	@mixin box-shadow-down

@define-mixin highlight $color: $highlight-color, $width: $unit-6
	background: linear-gradient(0deg, $color $width, transparent $width) 

@define-mixin border-line $color: $border-color
	box-shadow: 0 0 0 $border-width $color

@define-mixin border-inline $color: $border-color
	box-shadow: 0 0 0 $border-width $color
@define-mixin border-outline $color: $border-color
	outline: $border-width solid $color

@define-mixin rounded-small $radius: $border-radius-small
	border-radius: $radius
.rounded-small
	@mixin rounded-small

@define-mixin rounded $radius: $border-radius
	border-radius: $radius
.rounded
	@mixin rounded

@define-mixin rounded-big $radius: $border-radius-big
	border-radius: $radius
.rounded-big
	@mixin rounded-big

@define-mixin font-range $min: $unit-1, $max: $unit1, $range: 12em 54em
	font-size: responsive $min $max
	font-range: $range

@define-mixin minchotai
	font-family: $font-minchotai

// hover

@define-mixin hover-opacity
	@media ($not-phone)
		transition: opacity $trans-time ease
		&:hover
			opacity: $hover-opacity

@define-mixin hover-scale $amount: $scale-down, $start: 1
	@media ($not-phone)
		transform: scale($start)
		transition: transform $trans-time ease
		&:hover
			transform: scale($amount)

@define-mixin hover-scale-opacity $amount: $scale-down, $start: 1
	@media ($not-phone)
		transform: scale($start)
		transition: transform $trans-time ease, opacity $trans-time ease
		&:hover
			opacity: $hover-opacity
			transform: scale($amount)

// backgrounds

@define-mixin background-image $src
	background: url($src)
	background-size: cover
	background-position: center center

@define-mixin gradient-bg $color
	background: linear-gradient($color, color( $color shade(15%) ))

@define-mixin gradient-bg-opposite $color
	background: linear-gradient(color( $color shade(15%) ), $color)

// positioning

@define-mixin overlay
	&::after
		content: ''
		position: absolute
		width: 100%
		height: 100%
		left: 0
		top: 0

@define-mixin position-absolute
	position: absolute
	height: 100%
	width: 100%
	top: 0
	left: 0

// paddings

@define-mixin space-equal-padding $padding
	> *
		padding: calc($padding / 2) 0
	> *:first-child
		padding-top: 0
	> *:last-child
		padding-bottom: 0

@define-mixin space-equal-padding-horz $padding
	> *
		padding: 0 calc($padding / 2)
	> *:first-child
		padding-left: 0
	> *:last-child
		padding-right: 0

@define-mixin super-big-vert-padding
