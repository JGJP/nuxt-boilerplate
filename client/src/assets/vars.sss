// breakpoints

$phone-bp:           	44em
$tablet-bp:          	66em
$phone:              	width <= $phone-bp
$tablet:             	width <= $tablet-bp
$not-phone:          	width > $phone-bp
$not-tablet:         	width > $tablet-bp
$tablet-only:        	$phone-bp < width <= $tablet-bp

$nav-breakpoint: $phone
$not-nav-breakpoint: $not-phone

// sizes
$width-superwide:      	110em
$width-wide:         	80em
$width-full:         	66em
$width-medium:       	45em
$width-narrow:       	30em
$width-super-narrow: 	20em

// units according type scale perfect fourth (1.333)
// https://type-scale.com/

$scale:					1.333
$unit-base: 			16px

$unit1:					1rem
$unit2:					$unit1 * $scale
$unit3:					$unit2 * $scale
$unit4:					$unit3 * $scale
$unit5:					$unit4 * $scale
$unit6:					$unit5 * $scale
$unit7:					$unit6 * $scale
$unit8:					$unit7 * $scale
$unit9:					$unit8 * $scale
$unit10:				$unit9 * $scale
$unit11:				$unit10 * $scale
$unit12:				$unit11 * $scale
$unit13:				$unit12 * $scale
$unit14:				$unit13 * $scale
$unit15:				$unit14 * $scale
$unit16:				$unit15 * $scale
$unit17:				$unit16 * $scale
$unit18:				$unit17 * $scale
$unit19:				$unit18 * $scale
$unit20:				$unit19 * $scale
$unit21:				$unit20 * $scale
$unit22:				$unit21 * $scale
$unit23:				$unit22 * $scale
$unit24:				$unit23 * $scale
$unit25:				$unit24 * $scale
$unit26:				$unit25 * $scale
$unit27:				$unit26 * $scale

$unit-1:				$unit1 / $scale
$unit-2:				$unit-1 / $scale
$unit-3:				$unit-2 / $scale
$unit-4:				$unit-3 / $scale
$unit-5:				$unit-4 / $scale
$unit-6:				$unit-5 / $scale
$unit-7:				$unit-6 / $scale
$unit-8:				$unit-7 / $scale
$unit-9:				$unit-8 / $scale
$unit-10:				$unit-9 / $scale

$unit01:				$unit-7
$unit025:				$unit-5
$unit05:				$unit-2
$unit075:				$unit-1

$emunit1:				1em
$emunit2:				$emunit1 * $scale
$emunit3:				$emunit2 * $scale
$emunit4:				$emunit3 * $scale
$emunit5:				$emunit4 * $scale
$emunit6:				$emunit5 * $scale
$emunit7:				$emunit6 * $scale
$emunit8:				$emunit7 * $scale
$emunit9:				$emunit8 * $scale
$emunit10:				$emunit9 * $scale
$emunit11:				$emunit10 * $scale
$emunit12:				$emunit11 * $scale
$emunit13:				$emunit12 * $scale
$emunit14:				$emunit13 * $scale
$emunit15:				$emunit14 * $scale
$emunit16:				$emunit15 * $scale
$emunit17:				$emunit16 * $scale
$emunit18:				$emunit17 * $scale
$emunit19:				$emunit18 * $scale
$emunit20:				$emunit19 * $scale
$emunit21:				$emunit20 * $scale
